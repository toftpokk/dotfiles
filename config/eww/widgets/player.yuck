(defwidget widget.player []
  (button 
    :class "widget-player"
    :onclick "playerctl play-pause" 
    (literal :content widget.player.literal)
    )
  )

(defwidget widget.player.literal [status artist title]
  (label 
    :limit-width 15
    :text { 
      (status == "Playing" ? `` : "" ) +
      " ${!matches(title,"^ *$") ? title : '-'}"
    })
  )
